        <Button ToolTipService.InitialShowDelay="0"
                Style="{DynamicResource MaterialDesignFlatButton}" Width="120" Height="120">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="Check" Width="48" Height="48" />
            </StackPanel>
        </Button>
    </StackPanel>-->
</UserControl>
